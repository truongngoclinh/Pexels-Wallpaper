<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_white</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SlidingStyle" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/SlidingAnimation</item>
    </style>

    <style name="SlidingAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/above_activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/below_activity_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/below_activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/above_activity_exit</item>
    </style>

    <!--<style name="Theme.Custom" parent="Theme.AppCompat">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowActionBarOverlay">true</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    <!--</style>-->

    <style name="PreviewActionBar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

</resources>
